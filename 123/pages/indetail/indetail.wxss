/* pages/indetail/indetail.wxss */
@import "/wxParse/wxParse.wxss";
.img{
  width: 100%;
  height: 700rpx;
}
.txt{
  display: flex;
  justify-content: space-between;
  font-weight: 800;
  margin-left: 60rpx;
  margin-top: 50rpx;
  margin-bottom: 40rpx;
}
.txt image{
  width: 45rpx;
  height: 45rpx;
  margin-right: 40rpx;
}
.tt{
   margin-left: 60rpx;
   font-size: 34rpx;
   color: red;
   font-weight: 800;
}
.kc{
  display: flex;
 padding: 30rpx 0;
  padding-left: 60rpx;
  border-top: 1rpx solid #EDEDED;
  border-bottom: 1rpx solid #EDEDED
}
text{
  flex: 1;
}
.select{
  display: flex;
  padding: 0 20rpx;
  justify-content: space-between;
  height: 120rpx;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
  margin-bottom: 30rpx;
}
.cart{
  position: fixed;
  bottom: 0;
  width: 100%;
  background: white;
  z-index: 99;
  display: flex;
}
.cart>view{
  flex: 1;
  height: 100rpx;
  border-right: 1rpx solid #EDEDED;
}
.cart .start{
 text-align: center;
 font-size: 70rpx;
}
.cart .shop{
  text-align: center;
 font-size: 50rpx;
}
label{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  background: #e0232c;
  font-size: 20rpx;
  color: white;
  text-align: center;
  line-height: 40rpx;
  border-radius: 50%;
  position: absolute;
  top: 0;
  right: 420rpx;
}
.now{
  text-align: center;
  line-height: 100rpx;
}
.mai{
   text-align: center;
  line-height: 100rpx;
  background: #e0232c;
  color: white;
}
.m-pro{
  box-sizing: border-box;
  height: 500rpx;
  width: 100%;
  position: fixed;
  bottom: -500rpx;
  background: white;
  z-index: 2;
  flex-direction: column;
  padding: 30rpx;
}
.sp-top{
  display: flex;
  justify-content: space-between;
  

}
.t-l{
  display: flex;
}
.t-c{
  border-top: 1rpx solid #ccc;
  padding-top: 10rpx;
}
.t-c>view{
  margin: 10rpx 10rpx;
  width: 180rpx;
  height: 80rpx;
  background: #ccc;
text-align: center;
line-height: 80rpx;
border-radius: 10rpx;
}
.pri{
  color: red;
  font-size: 50rpx;
}

.sp-bottom{
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
}
.sp-bottom .num{
  display: flex;
  margin-top: 15rpx;
}
.sp-bottom .num .sub,.sp-bottom .num .add{
  width: 90rpx;
  height: 70rpx;
  border: 1rpx solid #ccc;
  text-align: center;
  line-height: 70rpx;
}
.sp-bottom .num>input{
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  height: 70rpx;
  width: 142rpx;
  text-align: center;
}

.mc{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  background: rgba(0, 0, 0, 0.4);
}