/**index.wxss**/
.header{
  display: flex;
  padding: 0 12rpx;
  align-items: center;
}
.addr{
  width: 120rpx;
  font-size: 24rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.search{
  background: #EDEDED;
  height: 46rpx;
  flex: 1;
  display: flex;
  border-radius: 10rpx;
  align-items: center;
}
.search input{
  flex: 1;
  font-size: 24rpx;
}
.search image{
  width: 22rpx;
  height: 22rpx;
  margin: 0 10rpx;
}
.sw{
  margin-top: 15rpx;
  height: 414rpx;
}
.sw .sw-item{
  height: 414rpx;
  
}
.sw swiper-item image{
  width: 100%;
  height: 100%;
}
.cate{
  display: flex;
  padding: 20rpx 0;
  flex-wrap: wrap; 
}
.cate-item{
  width: 33.3%;
  display: flex;
  flex-direction: column;
  align-items: center;
 
}
.cate-item image{
width: 120rpx;
height: 120rpx;
border-radius: 50%;
}
.cate-item text{
  font-size: 28rpx;
}
.gk>image{
  width: 100%;
  height: 300rpx;
}
.shop{
 display: flex;
 justify-content: center;
 align-items: center;
  width: 100%;
  height: 180rpx;
}
.shop image{
  width: 50rpx;
  height: 50rpx;
}
.shop text{
  font-size: 36rpx;
  letter-spacing: 10rpx;
  font-weight: 800;
}
.hot{
  display: flex;
  flex-wrap: wrap;
}
.hot .hot-item{
   width: 30%;
   
   margin: 10rpx;
   display: flex;
   flex-direction: column;
   align-items: center;
   /* border: 1rpx solid black; */
    box-shadow:#ccc 0px 0px 4rpx;
}
.hot .hot-item image{
  width: 200rpx;
  height: 200rpx;
}
.hot .hot-item .zt{
  text-overflow: ellipsis;
  overflow: hidden;
  width: 90%;
  font-size: 26rpx;
  white-space: nowrap;
}
.hot .hot-item .pre{
  color: red;
}

